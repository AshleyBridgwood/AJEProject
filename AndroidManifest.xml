<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ash.timerapp"
    android:versionCode="1"
    android:versionName="1.0" >
<uses-permission android:name="android.permission.VIBRATE"/>
    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/rt_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.ash.timerapp.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.ash.timerapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.ash.timerapp.STARTINGPOINT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.ash.timerapp.Menu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.ash.timerapp.MENU" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.ash.timerapp.Timer"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.ash.timerapp.TIMER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
    </application>

</manifest>
